{
    "name": "assurify/lobsters-slim",
    "description": "Lobsters community site port to Slim PHP",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "league/plates": "^3.5",
        "illuminate/database": "^10.0",
        "symfony/mailer": "^6.3",
        "spomky-labs/otphp": "^11.2",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "ramsey/uuid": "^4.7",
        "nesbot/carbon": "^2.69",
        "michelf/php-markdown": "^2.0",
        "ezyang/htmlpurifier": "^4.16"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse"
    }
}